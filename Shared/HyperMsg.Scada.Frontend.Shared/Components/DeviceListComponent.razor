@using HyperMsg.Scada.Frontend
@namespace HyperMsg.Scada.Frontend.Shared.Components

@code {
    [Parameter]
    public IEnumerable<Device>? Devices { get; set; }
}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @if (Devices != null)
        {
            foreach (var device in Devices)
            {
                <tr>
                    <td>@device.Name</td>
                    <td>@device.Status</td>
                    <td>@device.Type</td>
                </tr>
            }
        }
    </tbody>
</table>